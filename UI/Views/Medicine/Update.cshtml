@{
}
@model Infrastructure.DTO.MedicineDTO;
<html>
<head>
    <title>Update Medicine</title>
</head>
<body>
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4">Create New Medicine</h4>

            <div class="card">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card-body">
                            <form asp-action="UpdateMedicine" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-4">
                                        Medicine Department Name
                                        <span class="text-danger">*</span>
                                        <select class="form-select" asp-for="MedicineDepartmentId" asp-items="@(new SelectList(ViewBag.MedicineDepartment, "Id", "Name"))">
                                            <option value="" selected="selected">Please Select</option>
                                        </select>
                                        <span asp-validation-for="MedicineDepartmentId" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        Medicine Name
                                        <span class="text-danger">*</span>
                                        <input type="text" asp-for="MedicineName" class="form-control" maxlength="50" />
                                        <span asp-validation-for="MedicineName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        Description
                                        <span class="text-danger">*</span>
                                        <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <input hidden asp-for="MedicineId" />
                                        <input type="submit" value="Save" class="btn rounded-pill btn-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

</html>