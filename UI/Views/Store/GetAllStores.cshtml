@{
}
@model List<Infrastructure.DTO.StoreDTO>;
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">View All Storage</h4>
        <div class="row CustomAdd" style="text-align:right; margin-top:-60px; padding-bottom:10px">
            <a href="~/Store/Create"><i class="fa fa-plus" aria-hidden="true"></i>Add New Store</a>
        </div>
        <!-- Hoverable Table rows -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Medicine Name</th>
                                <th>Medicine Department</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Infrastructure.DTO.StoreDTO item in Model)
                            {
                                <tr>
                                    <td>@item.MedicineName</td>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.CostPrice</td>
                                    <td>@item.OriginalQty</td>
                                    <td>@item.MedicineDescription</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>