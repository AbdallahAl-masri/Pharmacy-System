@{
}
@model List<Infrastructure.DTO.StoreDTO>;
<html>
<head>
    <title>All Storage</title>
</head>
<body>
    <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="fw-bold py-3 mb-4">View All Storage</h4>
            <div class="row CustomAdd" style="text-align:right; margin-top:-60px; padding-bottom:10px">
                <a href="~/Store/Create"><i class="fa fa-plus" aria-hidden="true"></i>Add New Store</a>
            </div>
            <!-- Hoverable Table rows -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Medicine Name</th>
                                    @*  *@
                                    <th>Price</th>
                                    @*  *@
                                    @*  *@
                                    <th>Expiary Date</th>
                                    <th>Remaining Quantity</th>
                                    <th>Details</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Infrastructure.DTO.StoreDTO item in Model)
                                {
                                    <tr>
                                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i><strong>@item.MedicineName</strong></td>
                                        <td>@item.CostPrice</td>
                                        <td>@item.ExpiaryDate.ToString("dd/MMM/yyyy")</td>
                                        <td>@item.RemainingQty</td>
                                        <td>
                                            <button class="btn btn-info btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#details-@item.StoreId" aria-expanded="false">
                                                View Details
                                            </button>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" asp-controller="Store" asp-action="Update" asp-route-Id="@item.StoreId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                    <a class="dropdown-item" asp-controller="Store" asp-action="Delete" asp-route-Id="@item.StoreId"><i class="bx bx-trash me-1"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="collapse" id="details-@item.StoreId">
                                        <td colspan="5">
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th>Medicine Department</th>
                                                        <th>Original Quantity</th>
                                                        <th>Production Date</th>
                                                        <th>Description</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>@item.DepartmentName</td>
                                                        <td>@item.OriginalQty</td>
                                                        <td>@item.ProductionDate.ToString("dd/MMM/yyyy")</td>
                                                        <td>@item.MedicineDescription</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <br />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
