@{
}
@model Infrastructure.DTO.MenuPermissionsDTO;
<div>
    <ul class="menu-inner py-1">
        <!-- Dashboard -->
        <li class="menu-item active">
            <a href="~/Home/index" class="menu-link">
                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                <div data-i18n="Analytics">Dashboard</div>
            </a>
        </li>
        @if (Model != null)
        {
            @if (Model.User == "True")
            {
                <li class="menu-item">
                    <a href="~/User/GetAllUsers" class="menu-link">
                        <i class="menu-icon fa-solid fa-user"></i>
                        <div data-i18n="Analytics">Users</div>
                    </a>
                </li>
            }
            @if (Model.Medicine == "True")
            {
                <li class="menu-item">
                    <a href="~/Medicine/GetAllMedicines" class="menu-link">
                        <i class="menu-icon fa-solid fa-capsules"></i>
                        <div data-i18n="Analytics">Medicines</div>
                    </a>
                </li>
            }
            @if (Model.Store == "True")
            {
                <li class="menu-item">
                    <a href="~/Store/GetAllStores" class="menu-link">
                        <i class="menu-icon fa-solid fa-database"></i>
                        <div data-i18n="Analytics">Store</div>
                    </a>
                </li>
            }
        }
        <li class="menu-item">
            <a href="~/Invoice/Create" class="menu-link">
                <i class="menu-icon fa-solid fa-receipt"></i>
                <div data-i18n="Analytics">Billing</div>
            </a>
        </li>
    </ul>
</div>